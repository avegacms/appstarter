{
  "name": "avegacms/appstarter",
  "minimum-stability": "dev",
  "type": "project",
  "description": "Codeigniter4 :: AvegaCMS starter app",
  "homepage": "https://avegacms.ru",
  "license": "MIT",
  "authors": [
    {
      "name": "AvegaTeam",
      "email": "web@avega-soft.ru"
    }
  ],
  "require": {
    "php": "^8.2",
    "avegacms/avegacms": "dev-master"
  },
  "require-dev": {
    "codeigniter/coding-standard": "^1.8",
    "fakerphp/faker": "^1.9",
    "mikey179/vfsstream": "^1.6",
    "phpunit/phpunit": "^9.1"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "support": {
    "source": "https://avegacms.ru"
  }
}
